@model IList<FS02P2.Models.SchoolViewModels.ManageUserRolesData>
@{
    ViewData["Title"] = "ManageRoles";
}

<h1>ManageRoles</h1>
<form method="post" asp-action="ManageRoles">
    <div class="m-3">
        <h3>
            manage role for <span> @ViewData["UserName"]</span>
        </h3>
    </div>
    <div>
       
        
            @for (int i = 0; i < Model.Count; i++)
            {
                <input type="hidden" asp-for="@Model[i].RoleId" />
                <input type="hidden" asp-for="@Model[i].RoleName" />

                <input class="form-check-input" type="checkbox" asp-for="@Model[i].Assigned" />
                <label class="form-check-label" asp-for="@Model[i].Assigned">@Model[i].RoleName</label>
            }
     
       
    </div>
    <div>
        <input type="submit" class="btn btn-sm btn-warning" value="Save" />
    </div>
</form>
